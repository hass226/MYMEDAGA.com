# Example environment variables for production on Render
# Generate a secure SECRET_KEY (do not commit a real secret)
SECRET_KEY=replace_with_a_strong_secret

# ALLOWED_HOSTS should include your Render service domain, e.g. moncv.onrender.com
ALLOWED_HOSTS=moncv.onrender.com

# DATABASE_URL: provided by Render Postgres add-on or your external DB
# Example: postgres://user:password@host:5432/dbname
DATABASE_URL=

# SITE_URL used for callbacks and absolute links
SITE_URL=https://moncv.onrender.com

# Email config (example, replace with real values)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=you@example.com
EMAIL_HOST_PASSWORD=supersecret
DEFAULT_FROM_EMAIL=noreply@example.com
CONTACT_EMAIL=contact@example.com

# Payment / API keys (set them securely in Render)
ORANGE_MONEY_API_KEY=
ORANGE_MONEY_API_SECRET=
MOOV_MONEY_API_KEY=
PAYDUNYA_MASTER_KEY=
PAYDUNYA_PRIVATE_KEY=
WAVE_API_KEY=
STRIPE_SECRET_KEY=
OPENAI_API_KEY=

# Redis URL (optional, if you enable Channels/Celery)
REDIS_URL=redis://localhost:6379

# Optional: AWS S3 for media/static
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=
AWS_S3_ENDPOINT_URL=
USE_S3_STATIC=False

# If using Render Postgres: you'll get a `DATABASE_URL` after creating the managed DB
# Example: postgres://user:password@hostname:5432/dbname
DATABASE_URL=
